@model Budget.Models.EditCategoryViewModel

@{
    Layout = "~/Views/Shared/TemplateLayout.cshtml";
}

@using (Html.BeginForm("DeleteCategory", "Household", FormMethod.Post,
                                                    new { enctype = "Multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-4">
            <h3>Confirm deletion of the category @Model.Name:</h3>
            <h5>Please note that deleting a category is a "soft-delete" in which the category
            will remain in the system, but not be available to select when submitting future
            transactions.</h5>
        </div>
    </div>
    <div style="min-height: 5px;"></div>
    <div class="row">
        <div class="col-md-2">
            <input type="hidden" value="@Model.Id" name="Id" />
            @Html.ActionLink("Back", "Index", "Household")
            <br />
            <input type="hidden" value="@Model.HouseholdId" name="HouseholdId" />
            <input type="hidden" value="@Model.Id" name="Id" />
            <input type="submit" value="Confirm Edits" class="btn btn-default" />
        </div>

    </div>
}
<br /> or @Html.ActionLink("Delete this account.","DeleteAccount","Household", new { id = Model.Id }, new { })