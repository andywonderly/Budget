@model Budget.Models.TransactionViewModel

@{
    Layout = null;
}

@using (Html.BeginForm("_NewTransaction", "Household", FormMethod.Post,
                                                    new { enctype = "Multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        @Html.DropDownList("Categories", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <div style="min-height: 5px;"></div>
    <div class="row">
        <div class="col-md-2">
            <input type="hidden" name="AccountId" value="@Model.Id" />
            <input type="submit" value="Submit transaction" class="btn btn-default" />
        </div>

    </div>
}