@model Budget.Models.EditCategoryViewModel

@{
    Layout = "~/Views/Shared/TemplateLayout.cshtml";
}

@using (Html.BeginForm("EditSingleCategory", "Household", FormMethod.Post,
                                                    new { enctype = "Multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-4">
            Category name: 
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div style="min-height: 5px;"></div>
    <div class="row">
        <div class="col-md-2">
            <input type="hidden" value="@Model.Id" name="Id" />
            <br />
            <input type="hidden" value="@Model.HouseholdId" name="HouseholdId" />
            <input type="hidden" value="@Model.Id" name="Id" />
            <input type="submit" value="Confirm Edit" class="btn btn-default" />
        </div>

    </div>
}
