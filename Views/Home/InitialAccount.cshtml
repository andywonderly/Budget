@model Budget.Models.CreateJoinViewModel

@{
    ViewBag.Title = "Create an account.";
    Layout = "~/Views/Shared/TemplateLayout.cshtml";
}

<div class="row">
    <h2>Create an account for your new household.</h2>
    @using (Html.BeginForm("CreateAccount", "Household", FormMethod.Post,
                                                            new { enctype = "Multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-2">
                <h4>
                    Name your account:
                </h4>
            </div>
        </div>
            <div class="row">
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Account name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    Enter a balance amount: $
                    <input type="number" name="Balance" step="any" />
                </div>
            </div>
            <div style="min-height: 5px;"></div>
            <div class="row">
                <div class="col-md-2">
                    @*<input type="hidden" name="HouseholdId" value="@Model.Id" />*@
                    <input type="submit" value="Create Account" class="btn btn-default" />
                </div>

            </div>
    }
</div>